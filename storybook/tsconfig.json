{
	"extends": [
		"expo/tsconfig.base",
		"../tsconfig.base.json"
	],
	"compilerOptions": {
		"allowJs": true,
		"allowUnreachableCode": false,
		"moduleSuffixes": [
			"",
			".ios",
			".android",
			".windows",
			".macos",
			".web",
			".native"
		],
		"noEmit": true,
		"paths": {
			"@audira/carbon-react-native": [
				"../packages/carbon-react-native/src/index"
			],
			"@audira/carbon-react-native-elements": [
				"../packages/carbon-react-native-elements/src/index"
			]
		},
		"types": [
			"react-native-web"
		]
	},
	"include": [
		"../packages/carbon-react-native/src/**/*",
		"../packages/carbon-react-native-elements/src/**/*",
		"./.storybook/**/*",
		"./.storybook-rn/**/*",
		"./App.tsx",
		"./index.js",
		"./stories/**/*",
		"./types/**/*",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
	]
}